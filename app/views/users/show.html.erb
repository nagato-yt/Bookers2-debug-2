      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books, book_detail: @book_detail %>
       <%= render 'book_count', today_book: @today_book,yesterday_book: @yesterday_book, the_day_before: @the_day_before, 
         this_week_book: @this_week_book, last_week_book: @last_week_book, the_week_before: @the_week_before %>
    
    </div>
    
  </div>
 
